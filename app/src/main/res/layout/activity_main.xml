<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtdatebirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="20dp"
        android:text="Date Of Birth"
        app:layout_constraintBottom_toTopOf="@+id/txtage"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="51dp"
        android:layout_marginEnd="136dp"
        android:layout_marginRight="136dp"
        android:layout_marginBottom="24dp"
        android:text="Age"
        app:layout_constraintBottom_toTopOf="@+id/txtbasic"
        app:layout_constraintEnd_toStartOf="@+id/txtshowage"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtbasic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="51dp"
        android:layout_marginBottom="21dp"
        android:text="Min.Basic Saving"
        app:layout_constraintBottom_toTopOf="@+id/txtinvest"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtinvest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginBottom="421dp"
        android:text="Allowable Investment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtdate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="20dp"
        android:hint="Click here to select"
        app:layout_constraintBottom_toTopOf="@+id/txtshowage"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtshowage"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/txtshowbasic"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtshowbasic"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/txtshowinvest"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtshowinvest"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        android:layout_marginBottom="420dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>